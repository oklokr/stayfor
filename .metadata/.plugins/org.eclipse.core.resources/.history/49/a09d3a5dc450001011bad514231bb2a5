package com.stayfor.fileupload_service.controller;

import java.util.Iterator;

import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;
import org.springframework.web.multipart.MultipartFile;
import org.springframework.web.multipart.MultipartHttpServletRequest;

import com.stayfor.fileupload_service.service.FileStorageService;

@RestController
@RequestMapping
public class UploadController {
	private static final Logger logger = LoggerFactory.getLogger( UploadController.class );
	
	private final FileStorageService fileStorageService;
	
	public UploadController(FileStorageService fileStorageService) {
		this.fileStorageService = fileStorageService;
	}
	
	public void InitUploadFile(Iterator<String> request, String type) {
		Iterator<String> fileNames = request.getFileNames();
		if(!fileNames.hasNext()) {
			logger.info("업로드 파일이 없습니다.");
		}
		while(fileNames.hasNext()) {
			String key = fileNames.next();
			MultipartFile file = request.getFile(key);
			
			logger.info("Key: {}", key);
			logger.info("파일 이름: {}", file.getOriginalFilename());

			// 저장
			String savedPath = fileStorageService.storeFile(file, file.getOriginalFilename(), type);

			logger.info("저장 경로: {}", savedPath);
		}
	}
	
	@PostMapping("/file/test")
	public String test(MultipartHttpServletRequest request) {
		InitUploadFile(request, "user");
		return "업로드 완료";
	}
}

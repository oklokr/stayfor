spring.config.import=configserver:http://localhost:8888
spring.application.name=fileupload_service
server.port=8093

# Eureka Client 설정
# 유레카 서버 위치
eureka.client.service-url.defaultZone=http://localhost:8761/eureka
# Eureka 등록 및 레지스트리 가져오기
eureka.client.register-with-eureka=true
eureka.client.fetch-registry=true
# 로컬 테스트 시 Eureka에 호스트 이름 명시 (옵션)
eureka.instance.prefer-ip-address=true
eureka.instance.hostname=localhost
# 인스턴스 ID 설정 (옵션)
eureka.instance.instance-id=${spring.application.name}:${random.value}
# 메타데이터 추가 (선택 사항)
eureka.instance.metadata-map.version=1.0.0
# Health Check 설정
eureka.instance.health-check-url-path=/actuator/health

file.upload.user.dir: ./uploads/member
file.upload.review.dir: ./uploads/review
file.upload.review.dir: ./uploads/review
file.upload.accomm.dir: ./uploads/accomm
spring.web.resources.static-locations= file:./uploads/